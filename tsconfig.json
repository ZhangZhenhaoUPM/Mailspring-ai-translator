{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom",
      "es2018.asynciterable",
      "esnext.array"
    ],
    "inlineSourceMap": true,
    "outDir": "lib",
    "baseUrl": "src",
    "typeRoots": [
      "./types/"
    ]
  }
}
